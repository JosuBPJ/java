import java.util.Scanner;

public class Sistema_Simple_CuentaBancaria {
    static void main() {

        Scanner sc = new Scanner(System.in);

        System.out.println("=====Cuenta Bancaria=====");
        System.out.println("   ===Liang Barrera===");
        System.out.println("Que gestion desea realizar?");
        System.out.println("1. Consultar Saldo");
        System.out.println("2. Depositar a su Cuenta");
        System.out.println("3. Retirar Saldo");
        System.out.println("4. Salir");

        int  saldo, cantidad, option;
        saldo = 4000;
        option = sc.nextInt();

        //Valida que la opcion puesta por el usuario sea una opcion real
        if (option >= 1 && option <= 4) {

            switch (option) {
                case 1:
                    System.out.println("Su Saldo es de: " + saldo);
                    break;

                case 2:
                    System.out.println("Digite el saldo a depositar: ");
                    cantidad = (int)sc.nextDouble();
                    System.out.println("Su Saldo total es de: " +(saldo + cantidad));
                    break;

                case 3:
                    System.out.println("Digite la cantidad a retirar: ");
                    cantidad = (int)sc.nextDouble();
                    System.out.println("Su Saldo total es de: " +(saldo - cantidad));
                    break;
            }


        } else if (option == 4) {
            System.out.println("Programa Finalizado");
        }else {
            System.out.println("Opcion invalida");
        }

        sc.close();

    }
}